// STS Strategies Database Schema
// PostgreSQL with Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  USER
  ADMIN
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
}

enum AccessStatus {
  PENDING
  GRANTED
  FAILED
  REVOKED
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_ON_CUSTOMER
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// ============================================
// AUTHENTICATION MODELS (NextAuth)
// ============================================

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  emailVerified       DateTime?
  name                String?
  image               String?
  password            String?   // Hashed password for credentials auth
  passwordResetToken  String?   @unique @map("password_reset_token")
  passwordResetExpiry DateTime? @map("password_reset_expiry")

  // TradingView integration
  tradingViewUsername         String?   @unique @map("trading_view_username")
  tradingViewUsernameVerified Boolean   @default(false) @map("trading_view_username_verified")

  // Role and status
  role                UserRole  @default(USER)
  onboarded           Boolean   @default(false)
  termsAcceptedAt     DateTime? @map("terms_accepted_at")

  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  // Relations
  accounts        Account[]
  sessions        Session[]
  purchases       Purchase[]
  strategyAccess  StrategyAccess[]
  supportTickets  SupportTicket[]
  ticketMessages  TicketMessage[]
  auditLogs       AuditLog[]

  @@index([email])
  @@index([tradingViewUsername])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// BUSINESS MODELS
// ============================================

model Strategy {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  description     String   @db.Text
  longDescription String?  @db.Text @map("long_description")

  // TradingView specific
  pineId          String   @unique @map("pine_id") // Format: PUB;xxxxx

  // Strategy metadata
  market          String   // "NQ" / "NASDAQ"
  timeframe       String   // "5m"
  style           String   // "momentum" / "trend" / "breakout" / "mean-reversion"
  sessionFocus    String?  @map("session_focus") // "US Open", "All Sessions", etc.

  // Features for display
  features        String[] // Key features as array
  imageUrl        String?  @map("image_url")

  // Provisioning config
  autoProvision   Boolean  @default(true) @map("auto_provision")

  // Status
  isActive        Boolean  @default(true) @map("is_active")
  sortOrder       Int      @default(0) @map("sort_order")

  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  strategyAccess StrategyAccess[]

  @@index([slug])
  @@index([isActive])
  @@map("strategies")
}

model Purchase {
  id                    String         @id @default(cuid())
  userId                String         @map("user_id")

  // Stripe data
  stripeSessionId       String         @unique @map("stripe_session_id")
  stripePaymentIntentId String?        @unique @map("stripe_payment_intent_id")
  stripeCustomerId      String?        @map("stripe_customer_id")

  // Payment details
  amount                Int            // In cents (e.g., 9900 = $99.00)
  currency              String         @default("usd")
  status                PurchaseStatus @default(PENDING)

  // Metadata
  metadata              Json?

  purchasedAt           DateTime?      @map("purchased_at")
  createdAt             DateTime       @default(now()) @map("created_at")
  updatedAt             DateTime       @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSessionId])
  @@index([status])
  @@map("purchases")
}

model StrategyAccess {
  id            String       @id @default(cuid())
  userId        String       @map("user_id")
  strategyId    String       @map("strategy_id")

  status        AccessStatus @default(PENDING)

  // Provisioning tracking
  grantedAt     DateTime?    @map("granted_at")
  revokedAt     DateTime?    @map("revoked_at")
  failureReason String?      @db.Text @map("failure_reason")
  retryCount    Int          @default(0) @map("retry_count")
  lastAttemptAt DateTime?    @map("last_attempt_at")

  // For idempotency
  jobId         String?      @unique @map("job_id")

  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  strategy Strategy @relation(fields: [strategyId], references: [id], onDelete: Cascade)

  @@unique([userId, strategyId])
  @@index([userId])
  @@index([strategyId])
  @@index([status])
  @@map("strategy_access")
}

// ============================================
// SUPPORT SYSTEM
// ============================================

model SupportTicket {
  id          String         @id @default(cuid())
  userId      String         @map("user_id")

  subject     String
  status      TicketStatus   @default(OPEN)
  priority    TicketPriority @default(MEDIUM)

  // Categorization
  category    String?        // "access", "billing", "technical", "other"

  resolvedAt  DateTime?      @map("resolved_at")
  closedAt    DateTime?      @map("closed_at")

  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  // Relations
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages TicketMessage[]

  @@index([userId])
  @@index([status])
  @@index([priority])
  @@map("support_tickets")
}

model TicketMessage {
  id         String   @id @default(cuid())
  ticketId   String   @map("ticket_id")
  userId     String?  @map("user_id") // Null for system messages

  message    String   @db.Text
  isInternal Boolean  @default(false) @map("is_internal") // Admin-only notes
  isFromUser Boolean  @default(true)  @map("is_from_user")

  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user   User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([ticketId])
  @@index([userId])
  @@map("ticket_messages")
}

// ============================================
// AUDIT & SYSTEM
// ============================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?  @map("user_id")

  action    String   // e.g., "user.login", "purchase.completed", "access.granted"
  details   Json     // Structured details

  ipAddress String?  @map("ip_address")
  userAgent String?  @db.Text @map("user_agent")

  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_config")
}

// ============================================
// TRADINGVIEW CREDENTIAL MANAGEMENT
// ============================================

model TradingViewCredential {
  id                    String    @id @default(cuid())

  // Encrypted values (AES-256-GCM)
  sessionIdEncrypted    Bytes     @map("session_id_encrypted")
  signatureEncrypted    Bytes     @map("signature_encrypted")

  // Encryption metadata
  iv                    Bytes     // Initialization vector for AES-GCM
  authTag               Bytes     @map("auth_tag") // Authentication tag for AES-GCM

  // API configuration
  apiUrl                String    @map("api_url")

  // Operational status
  isActive              Boolean   @default(true) @map("is_active")
  validatedAt           DateTime? @map("validated_at")
  lastUsedAt            DateTime? @map("last_used_at")

  // Audit trail
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")
  createdBy             String?   @map("created_by") // Admin user ID who created this

  @@map("tradingview_credentials")
}

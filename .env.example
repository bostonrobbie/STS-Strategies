# ===========================================
# STS Strategies Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Database (Neon PostgreSQL)
# Get these from: https://neon.tech
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://user:password@host/database?sslmode=require"

# NextAuth
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional)
# Get these from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Stripe
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."
# Create a product/price in Stripe dashboard
STRIPE_PRICE_ID=""

# Redis (Upstash)
# Get these from: https://upstash.com
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
# Standard Redis URL for BullMQ (required for worker)
# Format: redis://[[username:]password@]host[:port][/database]
REDIS_URL=""

# Email (Resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=""
EMAIL_FROM="STS Strategies <noreply@yourdomain.com>"

# TradingView Access Management (Worker only)
# API URL is required; credentials are stored encrypted in database via Admin UI
TV_ACCESS_API_URL=""
# DEPRECATED: Use Admin > Credentials UI instead of these env vars
# TV_SESSION_ID=""
# TV_SIGNATURE=""

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="STS Strategies"

# Admin email (receives alerts)
ADMIN_EMAIL=""

# ===========================================
# CRITICAL: Credential Encryption Key
# ===========================================
# This key encrypts TradingView credentials stored in the database.
# Generate with: openssl rand -base64 32
# IMPORTANT: This key MUST be identical on web and worker services.
# If keys differ, credentials cannot be decrypted and provisioning will fail.
CREDENTIAL_ENCRYPTION_KEY=""
